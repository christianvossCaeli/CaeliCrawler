# =============================================================================
# CaeliCrawler Environment Configuration
# =============================================================================
#
# SECURITY WARNING:
# 1. NEVER commit the actual .env file to version control!
# 2. Generate a secure SECRET_KEY for production:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. Rotate ALL secrets immediately after any potential exposure
# 4. In production, ensure APP_ENV=production and DEBUG=false
#
# =============================================================================

# Application
APP_NAME=CaeliCrawler
APP_ENV=development
DEBUG=true
# IMPORTANT: Generate a secure key for production (min 32 characters)!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Database
# Note: POSTGRES_PASSWORD is used by docker-compose.
# SECURITY: Use a strong, unique password in production!
POSTGRES_PASSWORD=your-secure-password-for-production
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/caelichrawler
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/caelichrawler

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Azure Document Intelligence (optional)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-key

# Crawler Settings
CRAWLER_USER_AGENT=CaeliCrawler/1.0 (Research; contact@example.com)
CRAWLER_DEFAULT_DELAY=2.0
CRAWLER_MAX_CONCURRENT_REQUESTS=5
CRAWLER_RESPECT_ROBOTS_TXT=true

# Storage
DOCUMENT_STORAGE_PATH=./storage/documents

# API Settings
API_V1_PREFIX=/api/v1
ADMIN_API_PREFIX=/api/admin
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# PySis Integration
# SECURITY: These are Azure AD credentials - keep them secure!
PYSIS_API_BASE_URL=https://pisys.caeli-wind.de/api/pisys/v1
PYSIS_TENANT_ID=your-azure-tenant-id
PYSIS_CLIENT_ID=your-pysis-client-id
PYSIS_CLIENT_SECRET=your-pysis-client-secret
PYSIS_SCOPE=api://your-pysis-api-id/.default

# =============================================================================
